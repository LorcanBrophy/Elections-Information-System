<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>


<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.electionsinformationsystem.controllers.Controller">
    <Tab text="Politicians" closable="false">
        <VBox spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <HBox spacing="10">
                <ComboBox fx:id="themePicker" onAction="#onChangeTheme" />
                <Pane HBox.hgrow="ALWAYS"/>
                <TextField promptText= "Search for Politician" fx:id="politicianSearchResult"> </TextField>
                <Button text="ðŸ”" onAction="#onSearchPolitician"/>
                <Button text="â˜°" onAction="#onSearchOptionsPolitician"/>


                <HBox spacing="10">
                    <Button text="Save" onAction="#onSaveButton"/>
                    <Button text="Load" onAction="#onLoadButton"/>
                </HBox>


            </HBox>

            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <VBox spacing="10" HBox.hgrow="NEVER" VBox.vgrow="ALWAYS">
                    <Label text="Politicians"/>
                    <ListView fx:id="politicianListView" VBox.vgrow="ALWAYS"/>
                    <HBox spacing="5">
                        <Button text="Add" onAction="#onAddPolitician"/>
                        <Button text="Edit" onAction="#onEditPolitician"/>
                        <Button text="Remove" onAction="#onRemovePolitician"/>
                    </HBox>
                </VBox>

                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label text="Politician Details"/>
                    <TableView fx:id="politicianTableView" VBox.vgrow="NEVER">
                        <columns>
                            <TableColumn text="Name" fx:id="nameColumn"/>
                            <TableColumn text="Date of Birth (Y/M/D)" fx:id="dobColumn"/>
                            <TableColumn text="Party" fx:id="partyColumn"/>
                            <TableColumn text="Home County" fx:id="countyColumn"/>
                            <TableColumn text="Photo URL" fx:id="photoColumn"/>
                        </columns>
                    </TableView>

                    <Label text="Election Details"/>
                    <TableView fx:id="politicianElectionTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="Election Type" fx:id="electionTypeColumn"/>
                            <TableColumn text="Location" fx:id="electionLocationColumn"/>
                            <TableColumn text="Date" fx:id="electionDateColumn"/>
                            <TableColumn text="Num Winners" fx:id="electionNumWinnersColumn"/>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
        </VBox>
    </Tab>

    <Tab text="Elections" closable="false">
        <VBox spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <HBox spacing="20" VBox.vgrow="ALWAYS">

                <!-- Elections VBox -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label text="Elections"/>
                    <HBox spacing="5">
                        <Button text="Add" onAction="#onAddElection"/>
                        <Button text="Edit" onAction="#onEditElection"/>
                        <Button text="Remove" onAction="#onRemoveElection"/>
                    </HBox>
                    <ListView fx:id="electionListView" VBox.vgrow="ALWAYS"/>
                </VBox>

                <!-- Candidates VBox -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <HBox spacing="10">
                        <Pane HBox.hgrow="ALWAYS"/>
                        <TextField promptText= "Search for Election" fx:id="electionSearchResult"> </TextField>
                        <Button text="ðŸ”" onAction="#onSearchElection"/>
                        <Button text="â˜°" onAction="#onSearchOptionsElection"/>
                    </HBox>

                    <Label text="Candidates"/>
                    <HBox spacing="5">
                        <Button text="Add" onAction="#onAddCandidate"/>
                        <Button text="Edit" onAction="#onEditCandidate"/>
                        <Button text="Remove" onAction="#onRemoveCandidate"/>
                    </HBox>
                    <ListView fx:id="candidateListView" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>

                    <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

                        <Label text="Candidate Details"/>
                        <TableView fx:id="candidateTableView" VBox.vgrow="ALWAYS" prefHeight="150">
                            <columns>
                                <TableColumn text="Name" fx:id="candidatePoliticianColumn"/>
                                <TableColumn text="Party for Election" fx:id="candidatePartyColumn"/>
                                <TableColumn text="Votes" fx:id="candidateVotesColumn"/>
                            </columns>
                        </TableView>

                        <Label text="Politician Details"/>
                        <TableView fx:id="politicianDetailsTableView" VBox.vgrow="ALWAYS" prefHeight="150">
                            <columns>
                                <TableColumn text="DoB" fx:id="dobColumn2"/>
                                <TableColumn text="Party" fx:id="partyColumn2"/>
                                <TableColumn text="County" fx:id="countyColumn2"/>
                                <TableColumn text="Photo URL" fx:id="photoColumn2"/>
                            </columns>
                        </TableView>

                    </VBox>

                </VBox>

            </HBox>
        </VBox>
    </Tab>

</TabPane>
